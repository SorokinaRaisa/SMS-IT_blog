<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top header-color">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="@Url.Action("Index","Feed")">
                    <img src="@Url.Content("~/Content/Images/logo.jpg")" height="40"/>
                </a>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    
                    @if (Session["UserId"] != null)
                    {
                        <div>
                            @{
                                var photo = Session["Photo"];
                                if (photo != null)
                                {
                                    <img src="@Url.Content(photo.ToString())" height="35" width="35" class="img-circle" />
                                }
                            }
                        
                        @Session["Nickname"]
                       
                            <a href="@Url.Action("Logout","Home")">
                                <img src="@Url.Content("~/Content/Images/exit.jpg")" />
                            </a>
                        </div>
                        
                    }
                    else
                    {
                        <li>@Html.ActionLink("Войти", "Index", "Home")</li>
                        <li>@Html.ActionLink("Регистрация", "Index", "Register")</li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
